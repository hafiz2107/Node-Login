
<section class="mt-3" >
    
    <div class="container">
        <div class="row">
    {{#each products}}
        <div class="card col-12 col-sm-6 col-md-4 col-lg-3 ms-4 mt-4" style="width: 15rem;">
  <img class="card-img-top mt-2" src="{{img}}" alt="Card image cap" style="width: auto;height: 150px;">
  <div class="card-body">
    <h4 class="card-title">{{item}}</h4>
    <h5 class="card-text">{{price}}</h5>
    <p class="card-text">{{des}}</p>

      



      
      {{#if ../userSession}}
        <a href="" class="btn btn-primary" onclick="myalert()">Add to cart</a>
        {{else}}
        <a href="/login" class="btn btn-primary">Add to cart</a>    
      {{/if}}
      
  </div>
  </div>
    {{/each}}
</div>       
</div> 
  
</section>

<script>
          function myalert() {
            alert("Item added successfully !!");
        }
</script>





