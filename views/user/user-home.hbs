    box-shadow: -23px 10px 103px -32px rgba(0,0,0,0.75);
-webkit-box-shadow: -23px 10px 103px -32px rgba(0,0,0,0.75);
-moz-box-shadow: -23px 10px 103px -32px rgba(0,0,0,0.75);
  }
