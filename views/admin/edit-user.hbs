    <div class="main" style="scroll-behavior: smooth;">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Edit user</h2>
                    
                    
                    
    

                        <form action="/admin/edit-user/{{user._id}}" method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="User's new name" value="{{user.name}}"/>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="User's new email" value="{{user.email}}"/>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="pass" id="pass" placeholder="New Password" value="{{user.pass}}"/>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_pass" id="re_pass" placeholder="Reenter password" value="{{user.re_pass}}"/>
                            </div>
                       

                            <div class="form-group form-button">
                                <input type="submit" id="signup" class="form-submit" value="Submit" onclick="validatePassword(); return confirm('Are you sure ?');"/>
                                <a href="/admin/edit-cancel" class="btn btn-danger">Cancel</a>
                            </div>
                        </form>


                    </div>
                    {{!-- <div class="signup-image">
                        <figure><img src="./public/images/signup-image.jpg" alt="sing up image"></figure>
                    </div> --}}
                </div>
            </div>
        </section>
</div>


<script>
    function validatePassword() {
        var validator = $("#register-form").validate({
            rules: {
                pass: "required",
                minlength :5,
                re_pass: {
                    equalTo: "#pass"
                },
                name:{
                    required:true,
                    minlength:3
                },
                email:{
                    required:true,
                    minlength:7,
                },


            },
            messages: {
                pass: " Enter Password",
                re_pass: "Passwords are not same"
            }
        });
    }
</script>